{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "jsx": "react-jsx",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["jest", "node", "react", "react-dom"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/**/__tests__/**/*.*"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist"
  ]
}
