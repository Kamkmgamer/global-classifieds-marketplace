{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":semanticCommits",
    ":separateMultipleMajorReleases",
    ":label(renovate)",
    ":timezone(Europe/Berlin)",
    "group:allNonMajor"
  ],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchPackageNames": ["next", "react", "react-dom", "typescript", "eslint"],
      "groupName": "core-framework-and-types"
    },
    {
      "matchManagers": ["npm"],
      "enabled": true
    }
  ],
  "schedule": ["every weekend"],
  "prHourlyLimit": 0,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
